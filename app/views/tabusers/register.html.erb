<div class="admin-form">
  <div class="row">
    <div class="col-lg-12">
      <!-- Widget starts -->
          <h3>注册网站会员</h3>
      <div class="widget wred">
        <div class="widget-head">
          <i class="icon-lock"></i> Register 
        </div>
      <div class="widget-content">
        <div class="padd">
          <% if flash[:notice] %>
            <div class="notice">
              <h2><%= flash[:notice] %></h2>
              <a href="logon.html">点击这里登录</a>
            </div>
          <% end %>
          <form class="form-horizontal">
                    <!-- Registration form starts -->
                                      <!-- Name -->
            <%=form_tag :action=>:registerUser  do %>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">用户名</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:name,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">密码</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:pass,:class=>"form-control",:type=>"password" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">真实姓名</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:tname,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">地址</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:address,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">邮编</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:code,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">电话</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:phone,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">E-mail</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:email,:class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-lg-3" for="name">地址类型</label>
              <div class="col-lg-9">
                <%= text_field :tabuser,:type,:class=>"form-control" %>
              </div>
            </div>
              <div class="form-group">
                <div class="col-lg-9 col-lg-offset-3">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox"> Accept Terms &amp; Conditions
                    </label>
                  </div>
                <br />
              <%= submit_tag '注册',:class=>"btn btn-danger"%>
                  <input type="button"  class="btn btn-success" value="取消"/>
            <% end %>
            </div>
          </div>
        <br />
      </form>
    </div>
  </div>
    <div class="widget-foot">
        已经注册？<a href="logon.html">点击这里登录</a>
      </div>
    </div>  
  </div>
</div>
</div>

  
<!-- JS -->
<script src="js/jquery.js"></script>
<script src="js/bootstrap.js"></script>

